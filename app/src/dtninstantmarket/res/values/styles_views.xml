<resources>

    <!-- Login screen -->
    <style name="login_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_blue</item>
    </style>

    <style name="html_screen_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="login_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">arial</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="loginTextInputLayout" parent="Theme.Design">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="settings_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">arial</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="settings_tv_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_divider</item>
    </style>

    <style name="settings_divider" parent="divider">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="settings_checkbox_theme">
        <item name="colorAccent">@color/green</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="settings_checkbox_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="settings_checkbox">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/settings_checkbox_theme</item>
    </style>

    <!-- Symbols Screen -->
    <style name="symbol_value_no_width">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">.7</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="auto_size_field">
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>

    <style name="symbol_value" parent="symbol_value_no_width">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>

    <!-- Chart Screen -->

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/not_selected_tab</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="chart_quote_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chart_quote_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_7d</item>
    </style>

    <style name="news_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/news_divider</item>
    </style>

    <style name="Theme.Default.Dark.Black">
        <item name="sc_chartBackgroundColor">@color/black</item>
        <item name="sc_plotAreaColor">@color/black</item>
    </style>

    <style name="ChartsEmptyTextView" parent="NewsEmptyTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- News Screen -->
    <style name="ArticleTitle">
        <item name="android:textColor">@color/article_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArticleDate">
        <item name="android:textColor">@color/article_date</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/ic_clock_24dp</item>
        <item name="android:drawablePadding">@dimen/padding_nano</item>
    </style>

    <style name="NewsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="news_search_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">250</item>
    </style>

    <style name="newsSearchTextInputLayout" parent="Theme.Design">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="SearchNewsKeywordToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NewsEmptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
